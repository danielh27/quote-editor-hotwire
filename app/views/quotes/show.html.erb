<main class="container">
  <%= link_to "Back to quotes", quotes_path %>

  <div class="header">
    <h1>
      <%= @quote.name %>
    </h1>

    <%= link_to "New Date",
      new_quote_item_date_path(@quote),
      data: { turbo_frame: "new_item_date" },
      class: "btn btn--primary" %>
      
  </div>

  <%= turbo_frame_tag "new_item_date" %>

  <%= turbo_frame_tag "item_dates" do %>
    <%= render @item_dates, quote: @quote %>
  <% end %>
</main>
